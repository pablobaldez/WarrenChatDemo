<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.Gravity"/>
        <variable
            name="chatMessage"
            type="com.github.pablo.warrenchatdemo.presenters.ChatMessage"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_marginEnd="@dimen/small"
        android:layout_marginStart="@dimen/small"
        android:layout_marginRight="@dimen/small"
        android:layout_marginLeft="@dimen/small"
        app:isUserChatMargin="@{chatMessage.fromUser}"
        app:isUserChatGravity="@{chatMessage.fromUser}">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:padding="@dimen/small_xxx"
            android:foregroundGravity="center"
            app:isUserChatBackground="@{chatMessage.fromUser}">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/small_x"
                android:paddingRight="@dimen/small_x"
                android:paddingEnd="@dimen/small_x"
                android:paddingStart="@dimen/small_x"
                android:paddingBottom="@dimen/small"
                android:paddingTop="@dimen/small"
                app:isUserChatGravity="@{chatMessage.fromUser}"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/message_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/app_name"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_marginBottom="@dimen/medium"
                    />

                <com.github.pablo.warrenchatdemo.views.widgets.TypeWriterTextView
                    android:id="@+id/message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:isUserChatTextColor="@{chatMessage.fromUser}"
                    tools:text="sample text" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</layout>
