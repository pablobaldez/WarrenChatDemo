<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ChatMessagePadding">

    <TextView
        android:id="@+id/icon_text"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/shape_circular_black"
        android:textStyle="bold"
        android:maxLength="1"
        android:textAllCaps="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="p"/>

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/chat_text_horizontal_margin"
        android:layout_marginRight="@dimen/chat_text_horizontal_margin"
        app:layout_constraintRight_toLeftOf="@+id/icon_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ChatText"
        tools:text="MEU NOME Ã‰ PABLO"/>


</android.support.constraint.ConstraintLayout>