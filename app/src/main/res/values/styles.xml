<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Inverse" parent="Theme.AppCompat.NoActionBar">
        <item name="colorButtonNormal">@color/black</item>
        <item name="buttonStyle">@style/Button.Black</item>
        <item name="android:buttonStyle">@style/Button.Black</item>
    </style>
    
    <style name="Button.Black" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/selector_white</item>
    </style>

    <style name="OptionsStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">@color/selector_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:height">@dimen/thumb_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChatMessagePadding">
        <item name="android:paddingLeft">@dimen/chat_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/chat_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/chat_vertical_padding</item>
    </style>

    <style name="ChatText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:layout_marginTop">@dimen/small_xx</item>
    </style>

</resources>
